                <RadioButton
                    android:id="@+id/q5a2"
                    style="@style/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q5a2wrong" />

                <RadioButton
                    android:id="@+id/q5a3"
                    style="@style/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q5a3right" />

                <RadioButton
                    android:id="@+id/q5a4"
                    style="@style/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q5a4wrong" />
            </RadioGroup>

        </LinearLayout>

        <!--Question 6-->

        <LinearLayout
            android:id="@+id/sixth_question"
            style="@style/questions"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_6" />

            <EditText
